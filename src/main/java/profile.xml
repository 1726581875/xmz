<?xml version="1.0" encoding="UTF-8"?>
<xmz>
  <!-- 配置数据源 -->
  <dataSource>
    <driver>com.mysql.cj.jdbc.Driver</driver>
    <url>jdbc:mysql://localhost:3306/blog?characterEncoding=UTF-8&amp;serverTimezone=GMT%2B8</url>
    <username>root</username>
    <password>root</password>
  </dataSource>
  
  <!-- 配置数据库表名和实体名映射 -->
  <tables>  
    <table>
      <tableName>article</tableName>
      <entityName>Article</entityName>
    </table>
    
    <table>
      <tableName>collection</tableName>
      <entityName>Collection</entityName>
    </table>  
    
    <table>
      <tableName>user_detail</tableName>
      <entityName>UserDetail</entityName>
    </table>  
    
    <table>
      <tableName>category</tableName>
      <entityName>Category</entityName>
    </table>  
    
    <table>
      <tableName>article_comment</tableName>
      <entityName>ArticleComment</entityName>
    </table>  
    
    <table>
      <tableName>comment_reply</tableName>
      <entityName>CommentReply</entityName>
    </table> 
    
    <table>
      <tableName>user_star</tableName>
      <entityName>UserStar</entityName>
    </table> 
       
 </tables>
  
